<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/styleLogin.css">
    <title>Login</title>
</head>
<body>
    <div class="login-popup">
        <div class="box">
            <div class="img-area">
                <div class="img">
                </div>
            </div>
            <div class="form">
                <h1>Login</h1>
                <form asp-action="Index" method="post">
                    <a id="errorView" style="color:red;">@ViewBag.FailedLogin</a>
                    <br />
                    <div class="form-group">
                        <input id="txUser" type="text" placeholder="Usuario" name="user" class="form-control">
                    </div>
                    <div class="form-group">
                        <input id="txPass" type="password" placeholder="Contrañesa" name="pass" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>
                            <input type="checkbox">
                            Remenber Me
                        </label>
                        <button id="btnLogin" type="submit" class="btn">
                            iniciar sesión
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>

<script>
    setTimeout(function () {
        document.getElementById("errorView").style.display = "none";
    }, 3000);
</script>

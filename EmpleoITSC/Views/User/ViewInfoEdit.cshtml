@model EmpleoITSC.Models.USERS

@{
    ViewData["Title"] = "Actualizar Usuario";
}

<h1>Actualizar Usuario</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-route-id="@Model">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="rol" class="control-label"></label>
                <select asp-for="rol" class="form-control" id="rol">
                    <option value="">Selecciona un rol</option>
                    <option value="ADM" selected>Administrador</option>
                    <option value="EST" selected>Estudiante</option>
                </select>
                <span asp-validation-for="rol" class="text-danger"></span>
            </div>
            <span id="resultado"></span>
            <div class="form-group" id="userName" style="display: none">
                <label asp-for="userName" class="control-label"></label>
                <input asp-for="userName" class="form-control" />
                <span asp-validation-for="userName" class="text-danger"></span>
            </div>
            <div class="form-group" id="userPass" style="display: none">
                <label asp-for="userPass" class="control-label"></label>
                <input asp-for="userPass" class="form-control" />
                <span asp-validation-for="userPass" class="text-danger"></span>
            </div>
            <div class="form-group" id="name" style="display: none">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group" id="lastName" style="display: none">
                <label asp-for="lastName" class="control-label"></label>
                <input asp-for="lastName" class="form-control" />
                <span asp-validation-for="lastName" class="text-danger"></span>
            </div>
            <div class="form-group" id="career" style="display: none">
                <label asp-for="career" class="control-label"></label>
                <select asp-for="career" class="form-control" asp-items="new SelectList(ViewBag.careers)">
                    <option value="">Selecciona una carrera</option>
                </select>
                <span asp-validation-for="career" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group" id="submit" style="display: none">
                <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                <a class="btn btn-outline-danger" asp-action="Index">Cancelar</a>
            </div>

            <div>

            </div>

            @*Siempre poner de ultimo y que no se vea*@
            <div class="form-group" style="visibility:hidden">
                <label asp-for="userId" class="control-label"></label>
                <input asp-for="userId" class="form-control" />
                <span asp-validation-for="userId" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
